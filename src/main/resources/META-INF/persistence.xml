<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
  <persistence-unit name="org.hibernate.tutorial.jpa">
    <properties>
      <!-- database connection -->
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/test-db" />
      <property name="javax.persistence.jdbc.user" value="test-user" />
      <property name="javax.persistence.jdbc.password" value="test-user" />
    </properties>
  </persistence-unit>
</persistence>
